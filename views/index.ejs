  <script>
    document
      .getElementById("download-form")
      .addEventListener("submit", function (event) {
        event.preventDefault();
        fetchData();
      });

    async function fetchData() {
      const url = document.getElementById("url").value.trim();
      const format = document.getElementById("format").value;

      if (!url) return alert("Please enter a valid YouTube URL.");

      const button = document.getElementById("convert-btn");
      const buttonText = document.getElementById("button-text");
      const spinner = document.getElementById("spinner");
      const resultContainer = document.getElementById("result");
      const thumbnail = document.getElementById("thumbnail");
      const title = document.getElementById("title");
      const views = document.getElementById("views");
      const description = document.getElementById("description");
      const downloadLink = document.getElementById("download-btn");

      if (buttonText) buttonText.textContent = "";
      if (spinner) spinner.classList.remove("hidden");

      button.disabled = true;
      resultContainer.classList.add("hidden");

      try {
        const response = await fetch(
          `/api/download?url=${encodeURIComponent(url)}&format=${format}`
        );
        const data = await response.json();

        if (!data.status) {
          throw new Error(data.error || "Unknown error occurred.");
        }

        if (thumbnail)
          thumbnail.src = data.metadata?.thumbnail || "default-thumbnail.jpg";
        if (title)
          title.innerText = data.metadata?.title || "No Title Available";
        if (views) {
          views.innerHTML = data.metadata?.views
            ? `<svg class="w-5 h-5 me-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.5C7.8 4.5 4 7.5 2.5 12c1.5 4.5 5.3 7.5 9.5 7.5s8-3 9.5-7.5c-1.5-4.5-5.3-7.5-9.5-7.5zM12 15a3 3 0 100-6 3 3 0 000 6z" />
      </svg> ${formatViews(data.metadata.views)}`
            : "Views not available";
        }

        if (description) {
          description.innerText = data.metadata?.description
            ? data.metadata.description.substring(0, 200) + "..."
            : "No description available.";
        }

        if (downloadLink) {
          downloadLink.href = data.download.url.url;
          downloadLink.innerText =
            data.download?.format === "mp4"
              ? "üé• Download Video"
              : "üéµ Download Audio";
        }

        resultContainer.classList.remove("hidden");
      } catch (error) {
        alert("Failed to fetch video. Please try again.");
      } finally {
        button.disabled = false;
        if (buttonText) buttonText.textContent = "Convert";
        if (spinner) spinner.classList.add("hidden");
      }
    }

    function formatViews(views) {
      if (views >= 1_000_000) return (views / 1_000_000).toFixed(1) + "M";
      if (views >= 1_000) return (views / 1_000).toFixed(1) + "K";
      return views;
    }
  </script>
